#!/usr/bin/env python3

import cgitb
cgitb.enable()

import os
import psycopg2 as connector
from urllib.parse import urlparse
import json
import sys

DATABASE_URL = os.environ['DATABASE_URL']

dbUrl = urlparse(DATABASE_URL)

DATABASE_OPTIONS = {
    'user': dbUrl.username,
    'password': dbUrl.password,
    'host': dbUrl.hostname,
    'databaseName': dbUrl.path[1:],
    'tableName': 'devicelocations'
}

print('Content-Type: text/plain', end = '\r\n\r\n')

REQUEST_METHOD = os.environ['REQUEST_METHOD']
CONTENT_TYPE = os.environ['CONTENT_TYPE']
CONTENT_LENGTH = os.environ['CONTENT_LENGTH']

# error cases
if not REQUEST_METHOD == 'POST':
    print('HTTP method not allowed')
    exit(1)

if not CONTENT_TYPE == 'application/json' :
    print('Incorrect request content type')
    exit(1)

if not int(CONTENT_LENGTH) < 1e6:
    print('Incorrect request content length or content length too large')
    exit(1)

# read post data
POST_DATA = sys.stdin.read(int(CONTENT_LENGTH))

content = json.loads(POST_DATA)

print('JSON received. ')

dbConn = connector.connect(user=DATABASE_OPTIONS['user'], password=DATABASE_OPTIONS['password'],
                           host=DATABASE_OPTIONS['host'], database=DATABASE_OPTIONS['databaseName'])

dbCursor = dbConn.cursor()

sqlQueryString = '''INSERT INTO ' + DATABASE_OPTIONS['tableName'] + ' (deviceid, trainname, trackname, phone, trainno, latitude, longitude) VALUES ('{k0}', '{k1}', '{k2}', {k3}, {k4}, {k5}, {k6});'''\
    .format(k0 = content['deviceId'], k1 = content['info']['trainName'], k2 = content['info']['trackName'], k3 = content['info']['phone'], k4 = content['info']['trainNo'], k5 = content['coordinate']['latitude'], k6 = content['coordinate']['longitude'])
dbCursor.execute(sqlQueryString)

dbConn.commit()

dbConn.close()

print('Successfuly got location.')
